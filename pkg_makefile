# gmail-oauth port makefile

COMMENT = rstms mailserver token daemon frontend page
PORTVERSION = 1.0.5
DISTNAME = gmail-oauth-$(PORTVERSION)
CATEGORIES = sysutils
MAINTAINER = Matt Kruger <mkrueger@rstms.net>
PERMIT_PACKAGE = Yes
SITES = https://github.com/rstms/gmail-oauth/releases/download/v$(PORTVERSION)/
EXTRACT_SUFX =.tgz
NO_BUILD = Yes
NO_TEST = Yes
PKG_ARCH = *
PREFIX = /var/www/nginx/oauth

do-install:
	${INSTALL_DATA_DIR} ${PREFIX}/
	${INSTALL_DATA} ${WRKDIR}/index.html ${PREFIX}/
	${INSTALL_DATA} ${WRKDIR}/index.js ${PREFIX}/

.include <bsd.port.mk>
